<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <cn.lightsky.infiniteindicator.indicator.AnimIndicator
        android:id="@+id/default_center_indicator"
        style="@style/Center"
        android:layout_height="@dimen/anim_circle_indicator_height"/>

    <cn.lightsky.infiniteindicator.indicator.AnimIndicator
        android:id="@+id/default_center_bottom_indicator"
        style="@style/CenterBottom"
        android:layout_height="@dimen/anim_circle_indicator_height"/>

    <cn.lightsky.infiniteindicator.indicator.AnimIndicator
        android:id="@+id/default_bottom_right_indicator"
        style="@style/BottomRight"
        android:layout_height="@dimen/anim_circle_indicator_height"/>

    <cn.lightsky.infiniteindicator.indicator.AnimIndicator
        android:id="@+id/default_bottom_left_indicator"
        style="@style/BottomLeft"
        android:layout_height="@dimen/anim_circle_indicator_height"/>

    <cn.lightsky.infiniteindicator.indicator.AnimIndicator
        android:id="@+id/default_center_top_indicator"
        style="@style/CenterTop"
        android:layout_height="@dimen/anim_circle_indicator_height"/>

    <cn.lightsky.infiniteindicator.indicator.AnimIndicator
        android:id="@+id/default_center_top_right_indicator"
        style="@style/CenterTopRight"
        android:layout_height="@dimen/anim_circle_indicator_height"/>

    <cn.lightsky.infiniteindicator.indicator.AnimIndicator
        android:id="@+id/default_center_top_left_indicator"
        style="@style/CenterTopLeft"
        android:layout_height="@dimen/anim_circle_indicator_height"/>
</RelativeLayout>